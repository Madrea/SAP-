<core:FragmentDefinition 
  xmlns:core="sap.ui.core" 
  xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:ui="sap.ui">
  <ViewSettingsDialog confirm="onConfirmSort">
    <sortItems>
      <ViewSettingsItem key="Isbn" text="{i18n>isbn}" selected="true"/>
      <ViewSettingsItem key="Title" text="{i18n>author}"/>
      <ViewSettingsItem key="Author" text="{i18n>title}"/>
      <ViewSettingsItem key="Language" text="{i18n>language}"/>
      <ViewSettingsItem key="PublishDate" text="{i18n>publishedOn}"/>
    </sortItems>
  </ViewSettingsDialog>
</core:FragmentDefinition>
